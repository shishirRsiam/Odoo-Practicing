<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_add_parent_tree" model="ir.ui.view">
        <field name="name">Add Parent</field>
        <field name="model">odoo_tutorial.add.parent</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="phone_number" />
            </tree>
        </field>
    </record>
    <record id="view_add_parent_form" model="ir.ui.view">
        <field name="name">Parent</field>
        <field name="model">odoo_tutorial.add.parent</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="phone_number" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_add_parent" model="ir.actions.act_window">
        <field name="name">Parent Database List </field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoo_tutorial.add.parent</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_school_managementiling_face"> Create your first Parent List</p>
        </field>
    </record>
</odoo>